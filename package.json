{
	"name": "nest-template",
	"version": "1.0.0",
	"description": "Template for new nestjs project",
	"author": "a14n.arriaga@gmail.com",
	"private": true,
	"license": "MIT",
	"scripts": {
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "rimraf coverage .nyc_output && concurrently 'npm:test:unit' 'npm:test:e2e'",
		"test:e2e": "vitest run --config ./tests/config/vitest.config.e2e.ts",
		"test:unit": "vitest run --config ./tests/config/vitest.config.unit.ts",
		"calculate-global-test-coverage": "ts-node ./calculate-global-test-coverage.ts",
		"format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
		"format:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
		"lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
		"lint:fix": "npm run lint -- --fix",
		"build": "npm run build:clean && nest build --type-check",
		"build:clean": "rimraf dist; exit 0",
		"type-check": "tsc --pretty --noEmit",
		"prepare": "husky"
	},
	"dependencies": {
		"@apollo/server": "^4.10.2",
		"@as-integrations/fastify": "^2.1.1",
		"@nestjs/apollo": "^12.1.0",
		"@nestjs/cli": "^10.3.2",
		"@nestjs/common": "^10.3.7",
		"@nestjs/config": "^3.2.1",
		"@nestjs/core": "^10.3.7",
		"@nestjs/graphql": "^12.1.1",
		"@nestjs/platform-fastify": "^10.3.7",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"graphql": "^16.8.1",
		"joi": "^17.12.2",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@commitlint/types": "^19.0.3",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.7",
		"@swc/cli": "^0.3.10",
		"@swc/core": "^1.4.11",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.11.30",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.4.0",
		"@typescript-eslint/parser": "^7.4.0",
		"@vitest/coverage-istanbul": "^1.3.1",
		"concurrently": "^8.2.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-simple-import-sort": "^12.0.0",
		"eslint-plugin-unicorn": "^51.0.1",
		"eslint-plugin-vitest": "^0.4.0",
		"fs-extra": "^11.2.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"nock": "^13.5.4",
		"nyc": "^15.1.0",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.4",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.3",
		"unplugin-swc": "^1.4.4",
		"vitest": "^1.3.1",
		"vitest-mock-extended": "^1.3.1"
	}
}
